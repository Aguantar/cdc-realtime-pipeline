{
    "name": "mysql-cdc-connector",
    "config": {
        "connector.class": "io.debezium.connector.mysql.MySqlConnector",
        "tasks.max": "1",

        "database.hostname": "cdc-mysql",
        "database.port": "3306",
        "database.user": "debezium",
        "database.password": "dbz_pass_2025",
        "database.server.id": "184054",

        "topic.prefix": "cdc",
        "database.include.list": "crypto_db",
        "table.include.list": "crypto_db.crypto_trades",

        "schema.history.internal.kafka.bootstrap.servers": "kafka-1:29092,kafka-2:29093,kafka-3:29094",
        "schema.history.internal.kafka.topic": "_schema-history",

        "include.schema.changes": "true",
        "snapshot.mode": "initial",

        "key.converter": "org.apache.kafka.connect.json.JsonConverter",
        "key.converter.schemas.enable": "false",
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "value.converter.schemas.enable": "false",

        "tombstones.on.delete": "true",
        "decimal.handling.mode": "string",
        "time.precision.mode": "connect"
    }
}
